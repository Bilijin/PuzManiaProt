<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnagramLevelSelectFragment"
    android:padding="32dp">

    <Button
        android:id="@+id/lvl1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lvl2"/>

    <Button
        android:id="@+id/lvl2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toTopOf="@id/lvl1"
        app:layout_constraintStart_toEndOf="@id/lvl1"
        app:layout_constraintEnd_toStartOf="@id/lvl3"/>

    <Button
        android:id="@+id/lvl3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toTopOf="@id/lvl1"
        app:layout_constraintStart_toEndOf="@id/lvl2"
        app:layout_constraintEnd_toStartOf="@id/lvl4"/>

    <Button
        android:id="@+id/lvl4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toTopOf="@id/lvl1"
        app:layout_constraintStart_toEndOf="@id/lvl3"
        app:layout_constraintEnd_toStartOf="@id/lvl5"/>

    <Button
        android:id="@+id/lvl5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toTopOf="@id/lvl1"
        app:layout_constraintStart_toEndOf="@id/lvl4"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>